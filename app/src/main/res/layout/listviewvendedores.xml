<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlancoInacap">

    <ImageView
        android:id="@+id/imgLstVendedor"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logooficial" />

    <TextView
        android:id="@+id/tvNombreVendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Nombre y Apellido"
        android:textColor="#000000"
        android:textSize="9sp"
        app:layout_constraintStart_toEndOf="@+id/imgLstVendedor"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEmailVendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="email@inacapmail.cl"
        android:textColor="#000000"
        android:textSize="9sp"
        app:layout_constraintStart_toEndOf="@+id/imgLstVendedor"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreVendedor" />

    <TextView
        android:id="@+id/tvSedeLstVendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="Sede"
        android:textColor="#000000"
        android:textSize="9sp"
        app:layout_constraintStart_toEndOf="@+id/imgLstVendedor"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailVendedor" />

    <Switch
        android:id="@+id/swEstadoVendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEstadoVendedor" />

    <ImageButton
        android:id="@+id/btnQuitarVendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/removendedores" />

    <TextView
        android:id="@+id/tvEstadoVendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="Activo"
        android:textColor="@color/NegroInacap"
        android:textSize="9sp"
        app:layout_constraintBottom_toTopOf="@+id/swEstadoVendedor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnQuitarVendedor" />

</android.support.constraint.ConstraintLayout>