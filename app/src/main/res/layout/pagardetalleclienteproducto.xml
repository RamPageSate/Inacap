<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:background="#F0F3F4"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNombreProductoPDC"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Nombre->"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btnRcQuitarPDC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="3dp"
            android:background="@android:color/transparent"
            android:paddingTop="8dp"
            android:visibility="visible"
            app:srcCompat="@drawable/menosproductosclientes" />

        <TextView
            android:id="@+id/tvCantidadProductoPDC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:paddingTop="10dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="16sp"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btnRcAgregarDPC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingTop="8dp"
            app:srcCompat="@drawable/plusblack" />

        <TextView
            android:id="@+id/tvTotalPDC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="12dp"
            android:gravity="right"
            android:paddingTop="8dp"
            android:text="$ 3000"
            android:textColor="#3C3F41"
            android:textSize="14sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
