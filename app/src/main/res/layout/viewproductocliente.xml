<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="-10dp"
        android:paddingRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgProductoClente"
            android:layout_width="117dp"
            android:layout_height="102dp"
            android:background="#000000"
            android:paddingLeft="1dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:srcCompat="@drawable/btnproductos" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="102dp"
            android:background="#F0F3F4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreProductoPDC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:text="Nombre->"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvCategoriaProductoCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="Descripcion ->"
                android:textColor="#909497"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvPrecioProductoCliente"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="18dp"
                android:text="$->"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btnRcAgregarDPC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="-14dp"
                android:layout_marginRight="12dp"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/plusblack" />

            <TextView
                android:id="@+id/tvCantidadProductoPDC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="-20dp"
                android:layout_marginRight="46dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="12sp"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/btnRcQuitarPDC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="-21dp"
                android:layout_marginRight="65dp"
                android:background="@android:color/transparent"
                android:visibility="invisible"
                app:srcCompat="@drawable/menosproductosclientes" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
